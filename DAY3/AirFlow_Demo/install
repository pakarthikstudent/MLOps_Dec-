python3 -m venv lab2
source lab2/bin/activate

export AIRFLOW_VERSION=2.10.1
export PYTHON_VERSION="$(python --version|cut -d" " -f2|cut -d"." -f 1,2)"
export CONSTRAINT_URL="https://raw.githubusercontent.com/apache/airflow/constraints-${AIRFLOW_VERSION}/constraints-${PYTHON_VERSION}.txt"

pip install "apache-airflow == ${AIRFLOW_VERSION}" --constraint "${CONSTRAINT_URL}"

airflow version
ls -t
airflow db init
airflow users create --username admin --firstname student --lastname user --role Admin --email test@example.com --password admin
airflow webserver -p 8080 
|
open a broswer -> 127.0.0.1:8080 => Login : admin
                                    password: admin
|
|
open another terminal -> activate your environment (ex: source lab2/bin/activate) -> airflow scheduler 
